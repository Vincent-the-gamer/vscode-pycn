{
  "publisher": "vincent-the-gamer",
  "name": "vscode-pycn",
  "displayName": "Pycn",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "description": "",
  "author": "Vincent-the-gamer",
  "license": "MIT",
  "homepage": "https://github.com/Vincent-the-gamer/vscode-pycn#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vincent-the-gamer/pycn"
  },
  "bugs": {
    "url": "https://github.com/Vincent-the-gamer/vscode-pycn/issues"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/index.js",
  "icon": "res/pycn-icon.png",
  "files": [
    "LICENSE.md",
    "dist/*",
    "res/*"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [],
    "configuration": {
      "type": "object",
      "title": "vscode-pycn",
      "properties": {}
    },
    "languages": [
      {
        "id": "pycn",
        "icon": {
          "light": "res/pycn-file-logo.png",
          "dark": "res/pycn-file-logo.png"
        },
        "extensions": [
          ".pycn"
        ]
      }
    ],
    "grammars": [
      {
        "language": "pycn",
        "scopeName": "source.pycn",
        "path": "./syntaxes/pycn.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "build": "tsdown src/index.ts --external vscode",
    "dev": "nr build --watch --sourcemap",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint:fix": "eslint . --fix",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "nr publish",
    "dep": "taze major -I"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@antfu/ni": "^25.0.0",
    "@types/node": "^24.1.0",
    "@types/vscode": "^1.102.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^9.32.0",
    "esno": "^4.8.0",
    "pnpm": "^10.13.1",
    "reactive-vscode": "^0.3.1",
    "taze": "^19.1.0",
    "tsdown": "^0.13.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vscode-ext-gen": "^1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "rolldown"
    ]
  }
}
